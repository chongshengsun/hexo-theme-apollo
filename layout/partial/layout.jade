doctype
html(lang=config.language)
    head
        include head
    body
        a.sr-only.sr-only-focusable(id="skippy" href="#main")
            .wrap
                span.skiplink-text!= __('skip_to_main_content')
        .wrap
            header
                a.logo-link(href=url_for())
                    img(src=url_for(theme.logo) alt="logo")
                include nav
            main.container#main
                block container
            footer
                block pagination
                block copyright
        include scripts
